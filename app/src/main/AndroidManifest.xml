<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amary.kade_footballeague">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.jadwal_favorite.JadwalFavActivity"></activity>
        <activity
            android:name=".ui.jadwal_favorite.FavoriteActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.detail_jadwal.DetailJadwalActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.jadwal_list.JadwalActivity" />
        <activity
            android:name=".ui.detail_liga.DetailLigaActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>